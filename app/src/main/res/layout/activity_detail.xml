<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailActivity">

    <ImageView
        android:id="@+id/ivBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvTitle"
        android:layout_below="@+id/tvTitle"
        android:layout_alignTop="@+id/tvOverview"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-359dp"
        android:layout_marginBottom="7dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvOverview"
        android:layout_alignParentStart="true"
        android:text="Venom"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/tvVenue"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="97dp"
        android:text="Venue"
        android:textSize="18sp"
        tools:text="TextView" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="182dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvOrganizer"
        android:layout_alignParentStart="true"
        android:text="TextView"
        android:textSize="18sp"
        tools:text=" Peak Season" />

    <TextView
        android:id="@+id/tvOverview"
        android:layout_width="match_parent"
        android:layout_height="131dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="213dp"
        android:text="TextView"
        android:textSize="18sp"
        tools:text="Follows Adonis Creed's life inside and outside of the ring as he deals with new found fame, issues with his family, and his continuing quest to become a champion." />


    <TextView
        android:id="@+id/tvOrganizer"
        android:layout_width="40dp"
        android:layout_height="31dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Organizer"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tvPeakSeason"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvVenue"
        android:layout_marginTop="-97dp"
        android:text="Peak Season:"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvOverview"
        android:layout_marginTop="-213dp"
        android:text="Activities:"
        android:textSize="18sp" />

</RelativeLayout>